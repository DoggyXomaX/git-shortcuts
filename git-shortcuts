alias g="git"

# Adding
alias ga="git add"
alias gaa="git add ."

# Branches
alias gb="git branch"
alias gbd="git branch -d"
alias gbD="git branch -D"
alias gbdr="git branch -d -r"
alias gbDr="git branch -D -r"
alias gbv="git branch -v"
alias gbvr="git branch -v -r"

# Switches
alias gsw="git switch"
alias gswc="git switch -c"
alias gswf="git switch -f"

# Cloning
alias gcl="git clone"

# Config
alias gcn="git config"
alias gcnu="git config user.name"
alias gcne="git config user.email"
alias gcngu="git config --global user.name"
alias gcnge="git config --global user.email"

# Commiting
alias gc="git commit"
alias gcm="git commit -m"
alias gca="git commit --amend"
alias gcam="git commit --amend -m"

# Difference
alias gd="git diff"
alias gdn="git diff --name-only"
alias gds="git diff --staged"
alias gdsn="git diff --staged --name-only"
alias gdp="git diff @~1 @"

# Fetching
alias gf="git fetch"
alias gfa="git fetch --all"

# Logging
alias gl="git log"
alias glo="git log --oneline"

# Merging
alias gm="git merge"

# Pushing/Pulling
alias gp="git push"
alias gpl="git pull"
alias gpu="git push -u origin"
function gnu() {
  gswc $1
  gpu $1
}

# Reset/Restore
alias grh="git reset --hard"
alias grs="git restore --staged"

# Removings
alias grm="git rm"
alias grmr="git rm -r"
alias grmc="git rm --cached"
alias grmcr="git rm --cached -r"

# Stashing
alias gst="git stash"
alias gstp="git stash pop"

# Status
alias gs="git status"
